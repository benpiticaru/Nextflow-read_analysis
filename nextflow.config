apptainer.cacheDir = "$baseDir/apptainer"

process {
    executor = "slurm"
    clusterOptions = '--account=def-mcconkey'
    errorStrategy = { task.exitStatus == 140 ? 'retry' : 'terminate' } 
    maxRetries = 3
    withLabel: basecalling {
        container = "genomicpariscentre/guppy-gpu:lates"
        memory = "64GB"
        time = {4.hour  * task.attempt }
        cpus = 32
        containerOptions = "--nv"
        clusterOptions = "--gres=gpu:2"
    }
    withLabel: polyA {
        memory = "16GB"
        time = { 10.hour * task.attempt }
        cpus = 8
    }
    withLabel: aligning {
        memory = "64GB"
        time = { 1.hour * task.attempt }
        cpus = 64
    }
    withLabel: remove_adaptor {
        container = "staphb/porechop:latest"
        memory = "16GB"
        time = { 1.hour * task.attempt }
        cpus = 64
    }
    withLabel: split_reads {
        memory = "16GB"
        time = { 2.hour * task.attempt }
        cpus = 32
    }
    withLabel: python_slurm {
        memory = "16GB"
        time = { 3.hour * task.attempt }
        cpus = 32
    }

    shell = ['/bin/bash', '-euo', 'pipefail']
}


process {
    withLabel: smallJob {
        executor = "local"
    }
    withLabel: python {
        executor = "local"
    }
    
    shell = ['/bin/bash', '-euo', 'pipefail']
}

profiles {
    standard {
        apptainer {
            enabled = true
            autoMounts = true
        }
    }
}